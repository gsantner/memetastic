<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:paddingBottom="@dimen/default_margin_2"
    android:paddingLeft="@dimen/default_margin_2"
    android:paddingRight="@dimen/default_margin_2"
    android:paddingTop="@dimen/default_margin_2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.gsantner.memetastic.activity.MemeCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/creator__text_size"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />


        <SeekBar
            android:id="@+id/memecreate__bottom_sheet__seek_font_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/default_margin_2"
            android:layout_marginStart="@dimen/default_margin_2"
            android:layout_marginTop="@dimen/default_margin_1"
            android:max="30"
            android:progress="18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/memecreate__bottom_sheet__toggle_all_caps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:checked="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text"
                android:textOff="@string/settings__caps_off"
                android:textOn="@string/settings__all_caps" />

            <Button
                android:id="@+id/memecreate__bottom_sheet__rotate_plus_90deg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="@string/settings__rotate"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primary_text" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin_1"
            android:text="@string/creator__text_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <uz.shift.colorpicker.LineColorPicker
            android:id="@+id/memecreate__bottom_sheet__color_picker_for_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin_1"
            android:text="@string/creator__border_color"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <uz.shift.colorpicker.LineColorPicker
            android:id="@+id/memecreate__bottom_sheet__color_picker_for_border"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:orientation="horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin_1"
            android:text="@string/creator__font"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/memecreate__bottom_sheet__dropdown_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown" />

    </LinearLayout>
</ScrollView>